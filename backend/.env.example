# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/realestate_mappro
# For Neon.tech: postgresql://username:password@ep-xxx.us-east-2.aws.neon.tech/realestate_mappro

# Claude API
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# OpenAI (for embeddings/fallback)
OPENAI_API_KEY=your-openai-api-key-here

# ArcGIS REST API URLs (Examples - user will provide their own)
ARCGIS_PARCEL_API=https://services.arcgis.com/YOUR_ORG/arcgis/rest/services/Parcels/FeatureServer/0
